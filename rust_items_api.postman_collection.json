{
  "info": {
    "name": "Rust SQLite Items API",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/health"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Health response is ok\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json.status).to.eql(\"ok\");",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Item (valid)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{base_url}}/items",
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"Milk\" }"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Item contains id and name\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json).to.have.property(\"id\");",
              "    pm.expect(json.name).to.eql(\"Milk\");",
              "    pm.collectionVariables.set(\"item_id\", json.id);",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "Create Item (invalid)",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" }
        ],
        "url": "{{base_url}}/items",
        "body": {
          "mode": "raw",
          "raw": "{ \"name\": \"\" }"
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 400\", function () {",
              "    pm.response.to.have.status(400);",
              "});",
              "",
              "pm.test(\"Error message returned\", function () {",
              "    pm.expect(pm.response.text()).to.include(\"name cannot be empty\");",
              "});"
            ]
          }
        }
      ]
    },
    {
      "name": "List Items",
      "request": {
        "method": "GET",
        "url": "{{base_url}}/items"
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "exec": [
              "pm.test(\"Status is 200\", function () {",
              "    pm.response.to.have.status(200);",
              "});",
              "",
              "pm.test(\"Response is array\", function () {",
              "    const json = pm.response.json();",
              "    pm.expect(json).to.be.an(\"array\");",
              "});"
            ]
          }
        }
      ]
    }
  ]
}
